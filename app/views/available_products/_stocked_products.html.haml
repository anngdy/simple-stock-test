%p#notice= notice
%table.table{:cellpadding => "0", :cellspacing => "0"}
  %thead
    %tr
      %th Product
      %th Color
      %th Size
      %th Quantity
      %th{:colspan => "15"}
  %tbody
    - @available_products.each do |available_product|
      %tr
        %td= available_product.product.name
        %td= available_product.color.name
        %td= available_product.size.name
        %td= available_product.quantity
        %td
          = content_tag :a, '', href: available_product, title: 'Details', data: {toggle: 'modal', target: '.waiting-modal'}, class: 'glyphicon glyphicon-plus'
        %td
          = content_tag :a, '', href: edit_available_product_path(available_product), title: 'Edit', data: {toggle: 'modal', target: '.waiting-modal'}, class: 'glyphicon glyphicon-pencil'
        %td
          = content_tag :a, '', href: available_product, title: 'Delete', method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-remove text-danger'
%br
